<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    <LinearLayout 
    	android:layout_width="match_parent"
    	android:layout_height="wrap_content"
    	android:orientation="horizontal"
    	android:layout_weight="1"
    	android:layout_marginLeft="20dp"
    	android:layout_marginRight="20dp"
    	android:layout_marginTop="20dp">
    		<LinearLayout 
    			android:layout_width="match_parent"
    			android:layout_height="match_parent"
    			android:layout_weight="1"
    			android:orientation="vertical">
    		    <TextView 
    		        android:layout_width="match_parent"
    				android:layout_height="match_parent"
    				android:layout_weight="1"
    				android:layout_marginTop="15dp"
    				android:text="用户"/>
    		    <TextView 
    		        android:layout_width="match_parent"
    				android:layout_height="match_parent"
    				android:layout_weight="1"
    				android:layout_marginTop="15dp"
    				android:text="贷款数额"/>
    		    <TextView 
    		        android:layout_width="match_parent"
    				android:layout_height="match_parent"
    				android:layout_weight="1"
    				android:layout_marginTop="15dp"
    				android:text="利息"/>
    		    <TextView 
    		        android:layout_width="match_parent"
    				android:layout_height="match_parent"
    				android:layout_weight="1"
    				android:layout_marginTop="15dp"
    				android:text="年限"/>
    		    <TextView 
    		        android:layout_width="match_parent"
    				android:layout_height="match_parent"
    				android:layout_weight="1"
    				android:layout_marginTop="15dp"
    				android:text="风险系数"/>
    		    <TextView 
    		        android:layout_width="match_parent"
    				android:layout_height="match_parent"
    				android:layout_weight="1"
    				android:layout_marginTop="15dp"
    				android:text="贷款类型"/>
    
    		</LinearLayout>
			
    		<LinearLayout 
    			android:layout_width="match_parent"
    			android:layout_height="match_parent"
    			android:layout_weight="1"
    			android:orientation="vertical">
    		    <TextView 
    		        android:id="@+id/detail_account"
    		        android:layout_width="match_parent"
    		        android:layout_marginTop="15dp"
    				android:layout_height="match_parent"
    				android:layout_weight="1"/>
    		    <TextView
    		        android:id="@+id/detail_money" 
    		        android:layout_width="match_parent"
    		        android:layout_marginTop="15dp"
    				android:layout_height="match_parent"
    				android:layout_weight="1"/>
    		    <TextView 
    		        android:id="@+id/detail_rate"
    		        android:layout_width="match_parent"
    		        android:layout_marginTop="15dp"
    				android:layout_height="match_parent"
    				android:layout_weight="1"/>
    		    <TextView 
    		        android:id="@+id/detail_year"
    		        android:layout_width="match_parent"
    				android:layout_height="match_parent"
    				android:layout_marginTop="15dp"
    				android:layout_weight="1"/>
    		    <TextView 
    		        android:id="@+id/detail_risk"
    		        android:layout_width="match_parent"
    				android:layout_height="match_parent"
    				android:layout_marginTop="15dp"
    				android:layout_weight="1"/>
    		    <TextView
    		        android:id="@+id/detail_kind" 
    		        android:layout_width="match_parent"
    				android:layout_height="match_parent"
    				android:layout_marginTop="15dp"
    				android:layout_weight="1"/>
    		  
			</LinearLayout>
	</LinearLayout>
	<LinearLayout
	    android:layout_width="match_parent"
    	android:layout_height="wrap_content"
    	android:orientation="horizontal"
    	android:layout_marginTop="20dp"
    	android:layout_marginBottom="20dp">
    		<TextView
    		    android:id="@+id/detail_makedeal"
    		    android:layout_width="match_parent"
    			android:layout_height="wrap_content"
    			android:text="确认贷款"
    			android:gravity="center"
    			android:textColor="#ff0000"
    			android:textSize="15sp"
    			android:background="@null"
    			android:layout_weight="1"/>
    		<TextView
    		    android:id="@+id/detail_dismiss"
    		    android:layout_width="match_parent"
    			android:layout_height="wrap_content"
    			android:text="取消"
    			android:textSize="15sp"
    			android:gravity="center"
    			android:background="@null"
    			android:layout_weight="1"/>
	</LinearLayout>
</LinearLayout>
