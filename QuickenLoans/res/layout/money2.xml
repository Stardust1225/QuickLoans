<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    android:orientation="vertical" >
    
     <LinearLayout 
        android:layout_width="match_parent"
    	android:layout_height="match_parent"
    	android:orientation="vertical"
    	android:layout_weight="1"
    	android:layout_marginTop="20dp"
    	android:layout_marginLeft="20dp"
    	android:layout_marginRight="20dp"
    	android:layout_marginBottom="10dp"
    	android:animateLayoutChanges="true">
        
        <LinearLayout 
           	android:layout_width="match_parent"
    		android:layout_height="wrap_content"
    		android:orientation="horizontal">
            	<TextView 
            	    android:id="@+id/mon2_leftmoney"
            	    android:layout_width="match_parent"
    				android:layout_height="wrap_content"
    				android:textSize="14sp"
    				android:text="已贷得"
    				android:gravity="left"
    				android:layout_weight="1"/>
            	<TextView 
            	    android:id="@+id/mon2_showlendmoney"
            	    android:layout_width="match_parent"
    				android:layout_height="wrap_content"
    				android:layout_weight="4"
    				android:text="我要贷款"
    				android:textColor="#ff9900"
    				android:textSize="14sp"
    				android:gravity="center"/>
        </LinearLayout>
        
       	
       <LinearLayout
       	    android:id="@+id/mon2_lendmoney"
           	android:layout_width="match_parent"
    		android:layout_height="match_parent"
    		android:orientation="vertical"
    		android:layout_weight="1">
       		
       		<LinearLayout
        	   	android:layout_width="match_parent"
    			android:layout_height="match_parent"
    			android:orientation="horizontal"
    			android:layout_weight="1">
    			
    				<LinearLayout
    				    android:layout_width="match_parent"
    					android:layout_height="match_parent"
    					android:orientation="vertical"
    					android:layout_weight="3">
    						<TextView
    						    android:layout_width="match_parent"
    							android:layout_height="match_parent"
    							android:layout_weight="1"
    							android:gravity="center"
    							android:text="贷款金额"/>
    						<TextView
    						    android:layout_width="match_parent"
    							android:layout_height="match_parent"
    							android:layout_weight="1"
    							android:gravity="center"
    							android:text="最低利率"/>
    						<TextView
    						    android:layout_width="match_parent"
    							android:layout_height="match_parent"
    							android:layout_weight="1"
    							android:gravity="center"
    							android:text="归还年限"/>
    						<TextView
    						    android:layout_width="match_parent"
    							android:layout_height="match_parent"
    							android:layout_weight="1"
    							android:gravity="center"
    							android:text="贷款类型"/>
    				</LinearLayout>
    			
    				<LinearLayout
    				    android:layout_width="match_parent"
    					android:layout_height="match_parent"
    					android:orientation="vertical"
    					android:layout_weight="1">
    						<EditText
    						    android:id="@+id/mon2_money"
    						    android:layout_width="match_parent"
    							android:layout_height="match_parent"
    							android:layout_weight="1"
    							android:gravity="center"
    							android:textSize="15sp"
    							android:hint="请输入贷款金额"/>
    							<Spinner
    							    android:id="@+id/mon2_rate"
    							    android:layout_width="match_parent"
    								android:layout_height="match_parent"
    								android:layout_weight="1"/>
    							<Spinner
    							    android:id="@+id/mon2_year"
    							    android:layout_width="match_parent"
    								android:layout_height="match_parent"
    								android:layout_weight="1"/>   
    							<Spinner
    							    android:id="@+id/mon2_style"
    							    android:layout_width="match_parent"
    								android:layout_height="match_parent"
    								android:layout_weight="1"/>    
    			
    				</LinearLayout>
    	   
    	   </LinearLayout> 
    	    
    	    <TextView
           	 	android:id="@+id/mon2_sendrequest"
           	 	android:layout_width="match_parent"
    			android:layout_height="wrap_content"
    			android:layout_marginTop="10dp"
    			android:orientation="horizontal"
    			android:text="提交申请"
    			android:textSize="15sp"
    			android:clickable="true"
    			android:gravity="center"/>
        </LinearLayout>
        
		 <TextView
            android:id="@+id/mon2_showsuccess"
            android:layout_width="match_parent"
    		android:layout_height="wrap_content"
    		android:orientation="horizontal"
    		android:text="已贷得项目"
    		android:textSize="20sp"
    		android:textColor="#003399"
    		android:layout_marginTop="15dp"
    		android:clickable="true"
    		android:gravity="center"/>
		 
		 <LinearLayout 
		    android:id="@+id/mon2_success"
           	android:layout_width="match_parent"
    		android:layout_height="match_parent"
    		android:orientation="vertical"
    		android:layout_weight="1">
    			<TextView
            		android:id="@+id/mon2_flash"
           		 	android:layout_width="match_parent"
    				android:layout_height="wrap_content"
    				android:orientation="horizontal"
    				android:text="点击刷新"
    				android:textSize="13sp"
    				android:textColor="#ff0000"
    				android:layout_marginTop="5dp"
    				android:gravity="center"/>
    			<ListView 
    			    android:id="@+id/mon2_successdeal"
    			    android:layout_width="match_parent"
    			    android:layout_marginTop="15dp"
    				android:layout_height="match_parent"/>
    			
         </LinearLayout>
        
    </LinearLayout>


     <LinearLayout 
        android:layout_width="match_parent"
    	android:layout_height="wrap_content"
    	android:orientation="horizontal">
        <Button
            android:id="@+id/mon2_mon1"
            android:layout_width="match_parent"
    		android:layout_height="wrap_content"
    		android:orientation="horizontal"
    		android:text="投资"
    		android:layout_weight="1"	
    		android:background="@null"/>
         <Button
            
            android:layout_width="match_parent"
    		android:layout_height="wrap_content"
    		android:orientation="horizontal"
    		android:text="贷款"
    		android:textColor="#ff6600"
    		android:layout_weight="1"
    		android:background="@null"/>
    </LinearLayout>
</LinearLayout>
