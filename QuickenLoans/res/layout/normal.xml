<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/normal_layout"
    android:background="@drawable/background"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    
		<LinearLayout
        android:layout_width="match_parent"
   		android:layout_height="match_parent"
   		android:orientation="vertical"
   		
   		android:layout_marginTop="10dp"
   		android:layout_marginLeft="20dp"
   		android:layout_marginRight="20dp"
   		android:layout_marginBottom="20dp">  
			
		<LinearLayout
    	    android:layout_width="match_parent"
   			android:layout_height="match_parent"
   			android:layout_weight="4.4"
   			android:orientation="horizontal">  
			<ImageView
			    android:id="@+id/nor_open"
			    android:layout_width="match_parent"
			    android:layout_height="match_parent"
			    android:layout_weight="5"
			    android:scaleType="fitCenter"
			    android:src="@drawable/account"/>
			<com.example.quickenloans.Mytextview
			    android:id="@+id/nor_welcome"
			    android:layout_width="match_parent"
			    android:layout_height="match_parent"
			    android:layout_weight="1"
			    android:gravity="center"
			    android:textSize="20sp"
			    android:text="速贷理财平台  欢迎你"/>
 		</LinearLayout>
 		
		<LinearLayout
			android:layout_width="match_parent"
   			android:layout_height="match_parent"
   			android:layout_marginTop="10dp"
   			android:orientation="horizontal"
   			android:layout_weight="4">
		    <TextView
		        android:id="@+id/nor_serviceintro"
		        android:layout_width="match_parent"
			    android:layout_height="match_parent"
			    android:layout_weight="1"
			    android:gravity="center"
			    android:textSize="17sp"
			    android:text="平台介绍"/>
		    <TextView
		        android:id="@+id/nor_riskintro"
		        android:layout_width="match_parent"
			    android:layout_height="match_parent"
			    android:layout_weight="1"
			    android:text="风险介绍"
			    android:textSize="17sp"
			    android:gravity="center"/>
		</LinearLayout>
		
		<LinearLayout
			android:layout_width="match_parent"
   			android:layout_height="match_parent"
   			android:orientation="horizontal"
   			android:layout_marginTop="10dp"
   			android:layout_weight="4">
		     <TextView
		         android:id="@+id/nor_makedeal"
		        android:layout_width="match_parent"
			    android:layout_height="match_parent"
			    android:layout_weight="1"
			    android:textSize="17sp"
			    android:text="投资贷款"
			    android:gravity="center"/>
		    <TextView
		        android:id="@+id/nor_accknow"
		        android:layout_width="match_parent"
			    android:layout_height="match_parent"
			    android:layout_weight="1"
			    android:text="用户须知"
			    android:textSize="17sp"
			    android:gravity="center"/>
		</LinearLayout>
		
		<TextView
		        android:id="@+id/normal_recommend"
		        android:layout_width="match_parent"
			    android:layout_height="wrap_content"
			    android:text="今日推荐"
			  	android:layout_marginTop="20dp"
			    android:textSize="16sp"
			    android:textColor="#3366cc"
			    android:gravity="center"/>
		
		<ListView
		    	android:id="@+id/nor_recommendlist"
			    android:layout_width="match_parent"
			    android:layout_height="match_parent"
			    android:layout_weight="2"
			    android:layout_marginTop="20dp"
			    android:scaleType="fitCenter"/>
 		
	</LinearLayout>
	
	
	<LinearLayout
	    android:layout_gravity="start"
        android:layout_width="200dp"
   		android:layout_height="match_parent"
   		android:background="@drawable/background1"
   		android:orientation="vertical">
        	
        	
        	<Button
        		android:layout_width="match_parent"
   				android:layout_height="match_parent"
				android:background="@null"
   				android:layout_weight="1"/>
        	<Button
        		android:id="@+id/nor_personinfo"
        		android:layout_width="match_parent"
				android:layout_height="match_parent"
				android:background="@null"
   				android:layout_weight="1"
   				android:text="个人信息"
   				android:gravity="center"
   				android:textSize="20sp"
   				android:textColor="#ffffff"/>
        	<Button
        		android:id="@+id/nor_changeinfo"
        		android:layout_width="match_parent"
   				android:layout_height="match_parent"
				android:background="@null"
   				android:layout_weight="1"
   				android:text="修改资料"
   				android:gravity="center"
   				android:textSize="20sp"
   				android:textColor="#ffffff"/>
        	<Button
        		android:id="@+id/nor_accountrelative"
        		android:layout_width="match_parent"
   				android:layout_height="match_parent"
				android:background="@null"
   				android:layout_weight="1"
   				android:text="关联账号"
   				android:gravity="center"
   				android:textSize="20sp"
   				android:textColor="#ffffff"/>
        	<Button
        		android:id="@+id/nor_history"
        		android:layout_width="match_parent"
   				android:layout_height="match_parent"
				android:background="@null"
   				android:layout_weight="1"
   				android:text="交易情况"
   				android:gravity="center"
   				android:textSize="20sp"
   				android:textColor="#ffffff"/>
        	<Button
        		android:id="@+id/nor_quit"
        		android:layout_width="match_parent"
   				android:layout_height="match_parent"
				android:background="@null"
   				android:layout_weight="1"
   				android:text="退出登录"
   				android:gravity="center|bottom"
   				android:textSize="20sp"
   				android:textColor="#ff0000"/>
    </LinearLayout>  
	
</android.support.v4.widget.DrawerLayout>
